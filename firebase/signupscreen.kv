#:kivy 2.3.1

#:import get_color_from_hex kivy.utils.get_color_from_hex
#:import Gradient kivy_gradient.Gradient
#:import Factory kivy.factory.Factory

<Signup>:
    FloatLayout:
        canvas.before:
            Color:
                rgba: 0.10980392156862745, 0.10980392156862745, 0.13725490196078433, 1  # Background color
            Rectangle:
                pos: self.pos
                size: self.size

        MDLabel:
            text: "Ripple"
            theme_text_color: "Custom"
            text_color: 1, 1, 1, 1
            font_size: 50
            halign: "center"
            font_name: "fonts/K2D/K2D-Bold.ttf"
            size: self.texture_size
            pos_hint: {"top": 1.4, "center_x": 0.5}  # Position label at the top

        MDFillRoundFlatButton:
            text: "Sign up with Apple"
            size_hint_x: .89
            _min_height: 70
            _min_width: 480 
            pos_hint: {"center_x": 0.5, "y": 0.37}  # Center it horizontally
            # on_release: root.parent.current = "email_login"
            radius: [35]  # Rounded corners
            md_bg_color: 0,0,0,1  # Button color
            halign: "right"  # Align text to the left
            padding: "75dp", "0dp"  # Add padding to the left to move text off-center to the right
            font_name: "fonts/inter/static/Inter_24pt-SemiBold.ttf"  # Set the font

        Image:
            source: "images/apple.png"
            pos_hint: {"center_x": 0.35, "y": 0.387}
            size_hint: None, None  # Allow manual size setting
            size: 32, 32  # Set the size directly

        MDFillRoundFlatButton:
            text: "Sign up with Google"
            theme_text_color: "Custom"
            text_color: "black"
            size_hint_x: .89
            _min_height: 70
            _min_width: 480 
            pos_hint: {"center_x": 0.5, "y": 0.29}  # Center it horizontally
            # on_release: root.parent.current = "email_login"
            radius: [35]  # Rounded corners
            md_bg_color: 1,1,1,1  # Button color
            halign: "right"  # Align text to the left
            padding: "75dp", "0dp"  # Add padding to the left to move text off-center to the right
            font_name: "fonts/inter/static/Inter_24pt-SemiBold.ttf"  # Set the font

        Image:
            source: "images/google.png"  # Use 'source' instead of 'path'
            pos_hint: {"center_x": 0.33, "y": 0.302}
            size_hint: None, None  # Allow manual size setting
            size: 38, 38  # Set the size directly


        MDLabel: 
            text: "or"
            font_size: 22
            color: 1, 1, 1, 1  # White color
            size: self.texture_size  # Dynamically set the size based on the text
            font_name: "fonts/inter/static/Inter_24pt-SemiBold.ttf"
            pos_hint: {"center_x": 1, "y": -0.27}  # Positioned in the center horizontally and 10% from the top vertically


        Button:
            size_hint: None, None
            size: 484, 70
            pos_hint: {"center_x": 0.499999999, "y": 0.115}  
            background_color: 0, 0, 0, 0  # Transparent background
            canvas.before:
                Color:
                    rgba: 1, 1, 1, 1  # Base color for the gradient (white)
                Color:
                    rgba: 1, 1, 1, 1  # Color for the border
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [35]
                    texture: Gradient.vertical(get_color_from_hex("#4f4f4f"),get_color_from_hex("#1C1C23"))

        Button:
            size_hint: None, None
            size: 484, 70
            pos_hint: {"center_x": 0.49999999999, "y": 0.1128}  
            background_color: 0, 0, 0, 0  # Transparent background
            canvas.before:
                Color:
                    rgba: 1, 1, 1, 0.8  # Base color for the gradient (white)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [35]
                    texture: Gradient.horizontal(get_color_from_hex("#4f4f4f"),get_color_from_hex("#1C1C23"))

        MDFillRoundFlatButton:
            text: "Sign up with E-mail"
            size_hint_x: .89
            _min_height: 70
            _min_width: 480 
            pos_hint: {"center_x": 0.5, "y": 0.115}  # Center it horizontally
            on_release: root.parent.current = "email_signup"
            radius: [35]  # Rounded corners
            md_bg_color: 0.2,0.2,0.2235294117647059,1  # Button color

        MDLabel:
            text: "By registering, you agree to our Terms of Use. [u]Learn[/u]\nhow we collect, use and share your data."
            font_size: 18
            markup: True  # Enable markup to use BBCode-like tags
            color: 0.4, 0.4, 0.5019607843137255, 1
            font_name: "fonts/inter/Inter-VariableFont_opsz,wght.ttf"
            size_hint: None, None
            size: 500, 100  # Specify a fixed size for alignment to work
            pos_hint: {"y": 0.023, "center_x": 0.5}  
            halign: "center"
            valign: "middle"
            text_size: self.size  # Set text_size to the widget's size for wrapping and alignment