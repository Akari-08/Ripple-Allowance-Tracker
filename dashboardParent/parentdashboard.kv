#:kivy 2.3.1

<ParentDashboard>:
    ScreenManager:
        id: screen_manager
        ParentChildren:
            id: parent_children_screen
            name: 'parent_children_screen'

<NameCard>:
    orientation: 'vertical'  # Arrange children vertically
    spacing: 10  # Reduced spacing between the rows
    padding: [20,20,20,0]  # Reduced padding around the content
    size_hint_x: None  # Allow the widget to have a custom width
    size_hint_y: None  # Allow the widget to have a custom height
    width: self.minimum_width  # Set the width to the minimum required by the children

    MDCard:
        style: "elevated"
        orientation: 'vertical'  # Ensure the card arranges its children vertically
        padding: 10  # Add some padding inside the card
        spacing: 10  # Reduced spacing between children inside the card

        BoxLayout:
            orientation: 'horizontal'
            size_hint_x: None
            width: self.minimum_width
            padding: [0, 10, 0, -20]  # Reduced padding above the button
            size_hint_y: None
            height: 40  # Set a fixed height for the button layout

            MDFillRoundFlatButton:
                on_release: print(self.parent.parent.parent.parent.parent.parent.child_popup(root.first, root.last))  # Print a message when the button is clicked
                radius: [35]  # Rounded corners
                md_bg_color: 0.10980392156862745, 0.10980392156862745, 0.13725490196078433, 1  # Button color
                size_hint_x: None
                width: 480
                size_hint_y: None
                height: 80  # Set a fixed height for the button to make it taller
                
                line_color: 1, 1, 1, 0.1  # Red outline color (RGBA format)
                line_width: 2    # Outline thickness

        # Horizontal layout for the labels
        MDBoxLayout:
            id: labels_layout  # Give the layout an ID for reference
            orientation: 'horizontal'
            padding: [50, 50, 50, 40 ]
            spacing: 20
            size_hint_x: None
            width: self.minimum_width

            Label:
                id: first_label
                text: root.first  # Bind to the first property
                size_hint_x: None
                width: self.texture_size[0]  # Set the width to the size of the text

            Label:
                id: last_label
                text: root.last  # Bind to the last property
                size_hint_x: None
                width: self.texture_size[0]  # Set the width to the size of the text

            Label:
                id: balance_label
                padding: 140
                text: str(root.balance)  # Bind to the balance property
                size_hint_x: None
                width: self.texture_size[0]  # Set the width to the size of the text

        # Button centered underneath the labels


